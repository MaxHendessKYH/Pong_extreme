<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayingClassicActivity"
    android:background="@color/spaceblue">


    <ImageView
        android:id="@+id/tv_logo"
        android:layout_width="639dp"
        android:layout_height="440dp"
        android:layout_marginBottom="508dp"
        android:src="@drawable/fauget_gaming__2_"
        android:text="Breakout"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.574"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/lv_highscore_classic"
        android:layout_width="190dp"
        android:layout_height="479dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintEnd_toStartOf="@+id/lv_highscore_timed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lv_highscore_timed"
        android:layout_width="195dp"
        android:layout_height="480dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="144dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_classic"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/custom_button"
        android:text="@string/btn_classic"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_timed"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="256dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/custom_button"
        android:text="@string/btn_timed"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>