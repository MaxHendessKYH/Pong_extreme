<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/space_blue"
    tools:context=".PlayingClassicActivity">

    <!-- end_game button -->
    <Button
        android:id="@+id/btn_endGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_52dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:background="@drawable/custom_button"
        android:text="@string/end_game"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- button layout -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_35dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toTopOf="@+id/surfaceView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81">

        <!-- score button -->
        <TextView
            android:id="@+id/tv_score"
            android:layout_width="@dimen/_89dp"
            android:layout_height="@dimen/_32dp"
            android:layout_marginHorizontal="@dimen/_20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="@string/score"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.173"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- time button -->
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="@dimen/_89dp"
            android:layout_height="@dimen/_32dp"
            android:layout_marginHorizontal="@dimen/_20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="@string/time"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.546"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- lives button -->
        <TextView
            android:id="@+id/tv_lives"
            android:layout_width="@dimen/_89dp"
            android:layout_height="@dimen/_32dp"
            android:layout_marginHorizontal="@dimen/_20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="@string/lives"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.909"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_520dp"
        android:layout_marginBottom="@dimen/_50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>